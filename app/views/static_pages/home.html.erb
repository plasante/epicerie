<div data-role="header">
	<h1><%=t :home_title %></h1>	
</div>

<div data-role="content">
	<ul data-role="listview">
		<li><%= link_to I18n.t(:url_home),    root_path    %></li>
		<li><%= link_to I18n.t(:url_help),    help_path    %></li>
		<% if signed_in? %>
			<li><%= link_to I18n.t(:users), users_path %></li>
			<li><%= link_to I18n.t(:url_contact), contact_path %></li>
			<li><%= link_to I18n.t(:url_edit_profile), edit_user_path(current_user) %></li>
			<li><%= link_to I18n.t(:url_sign_out), signout_path(current_user), :method => 'delete' %></li><br/>
			<%= render 'shared/micropost_form' %>
			<div>
				<h3><%= I18n.t(:micropost_feed) %></h3>
				<% if @feed_items.any? %>
					<%= I18n.t(:you_have) %> <%= @feed_items.count %> <%= I18n.t(:post) %> 
							 <%= link_to I18n.t(:click_here_to_see_them), current_user %>
				<% else %>
					<%= I18n.t(:you_have_zero_post) %>
				<% end %>
			</div>
		<% else %>
	  		<li><%= link_to I18n.t(:url_sign_in), signin_path %></li>
			<li><%= link_to I18n.t(:url_sign_up), signup_path %></li>
		<% end %>
	</ul>
</div>
