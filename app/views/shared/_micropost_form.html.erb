<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field" >
		<%= f.text_area :content, :cols => 50, :rows => 3, :placeholder => I18n.t(:compose_new_post) %>
	</div>
	<%= f.submit t(:create_post), :class => "btn btn-large btn-primary" %>
<% end %>